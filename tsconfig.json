{
    "compilerOptions": {
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "baseUrl": "./src", // <--- это позволит писать import из "components/App/App"
      "paths": {
        "*": ["*", "src/*"]
      }
    }
  }
  